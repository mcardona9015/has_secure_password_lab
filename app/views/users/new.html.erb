<h1>Create a new user</h1>

<% if flash[:messages] %>
    <% flash[:messages].each do |message|%>
        <p style="color:red"><%= message %></p>
    <%end%>
<%end%>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit %>
<% end %>
  
