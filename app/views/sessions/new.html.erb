<h1>Please Login</h1>

<% if flash[:message] %>
    <p style="color:red"><%= flash[:message] %></p>
<%end%>
<%= form_tag login_path do %>
    <%= label_tag :name%>
    <%= text_field_tag :name%>
    <%= label_tag :password%>
    <%= password_field_tag :password%>
    <%= submit_tag "Login"%>
<%end%>
<br>
<%= link_to "Create an account", new_user_path%>